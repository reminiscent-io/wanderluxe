externalPort = 3001

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 8082
externalPort = 3000

[objectStorage]
defaultBucketID = "replit-objstore-852a1cd5-5447-4cfc-b160-424e3a606d77"

[workflows]
runButton = "Run Development Server"

[[workflows.workflow]]
name = "Run Development Server"
