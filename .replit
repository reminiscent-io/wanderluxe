modules = ["nodejs-20", "web", "postgresql-16", "bun"]
run = "npm run dev"

[nix]
channel = "stable-24_05"
packages = ["supabase-cli", "nodejs"]

[deployment]
run = ["sh", "-c", "bun run preview"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "bun run build"]

[[ports]]
